<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactLenses" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="buttonBarNeutralButtonStyle">@color/purple_500</item> <!--button-->
        <item name="buttonBarPositiveButtonStyle">@color/white_200</item> <!-- button left icon color-->

        <item name="backgroundColor">@color/white_200</item> <!-- background colour -->
        <item name="backgroundTint">@color/white</item> <!-- card background colour -->
        <item name="backgroundInsetStart">@color/white</item> <!-- countdown background colour -->

        <item name="editTextColor">@color/white_500</item> <!-- editText line colour -->

        <item name="counterTextColor">@color/white_500</item> <!-- text colour for changing text -->
        <item name="counterOverflowTextColor">@color/red</item> <!-- text colour for changing text that is negative -->
    </style>
</resources>